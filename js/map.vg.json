{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total Forest Area Burnt in Australia by State (2019-20)",
    "width": 800,
    "height": 400,
    "projection": {
      "type": "mercator"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/Kimberley-Ngin/FIT3179-HomeworkTask-Wk9/refs/heads/main/data/STE_2016_AUST.json",
      "format": {
        "type": "topojson",
        "feature": "STE_2016_AUST"
      }
    },
    "transform": [
      {
        "lookup": "properties.STE_NAME16",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/Kimberley-Ngin/FIT3179-HomeworkTask-Wk9/refs/heads/main/data/forest_area_burnt_2019_20.csv"
          },
          "key": "state",
          "fields": [
            "total_forest"
          ]
        }
      }
    ],
    "mark": {
      "type": "geoshape"
    },
    "encoding": {
      "color": {
        "field": "total_forest",
        "type": "quantitative",
        "scale": {
        "type": "threshold",
        "domain": [100, 150, 200, 225, 250, 300, 350, 1000, 1200],
        "scheme": "goldorange"
      },
      "legend": {"title": "Total Forest Area Burnt ('000 hectares)"}
      },
      "tooltip": [
        {
          "field": "properties.STE_NAME16",
          "type": "nominal",
          "title": "State"
        },
        {
          "field": "total_forest",
          "type": "quantitative",
          "title": "Total Forest Area"
        }
      ]
    }
  }